<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/MatchedBG"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/UploadDetailsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SceneTextCollector"
        android:textColor="@color/TextColor"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Details:"
            android:layout_gravity="center"
            android:textColor="@color/TextColor"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/UploadUserIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Id"
            android:layout_gravity="center"
            android:textColor="@color/TextColor"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/UploadLocationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Link"
            android:layout_gravity="center"
            android:textColor="@color/TextColor"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            />

        <TextView
            android:id="@+id/UploadImageLinkTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Link"
            android:layout_gravity="center"
            android:textColor="@color/TextColor"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            />

        <TextView
            android:id="@+id/UploadTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Time"
            android:layout_gravity="center"
            android:textColor="@color/TextColor"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            />








    </LinearLayout>

</LinearLayout>